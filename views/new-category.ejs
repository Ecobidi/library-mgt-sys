<%-include ("partials/top") %>
<main class="col-lg-10" style="background-color: rgba(0, 0, 0, 0.6);">
  <div class="row space pb-0 mb-0 px-2 border-bottom">
    <div class="col-12 d-flex text-white justify-content-between align-items-center underline pb-2">
      <h3 class="title">Create New Category</h3>
    </div>
  </div>
  <div class="row space text-white">
    <div class="col-12">
      <form action="/categories/new" method="POST">
        <fieldset class="border p-2 rounded row">
          <legend>New Category</legend>
          <div class="form-group col-6">
            <label>Category title:</label>
            <input type="text" class="form-control" name="title">
          </div>
        </fieldset>
        <div class="form-group col-6 mt-2">
          <input class="form-control btn btn-primary" type="submit" value="Create">
        </div>
      </form>
    </div>
  </div>

</main>

<%-include ("partials/bottom") %>