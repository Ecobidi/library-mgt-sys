<%-include ("partials/top") %>
<main class="col-lg-10" style="background-color: rgba(0, 0, 0, 0.6);">
  <div class="row space pb-0 mb-0 px-2 border-bottom text-white">
    <div class="col-12 d-flex justify-content-between align-items-center underline pb-2">
      <h3 class="title">Add New Member</h3>
    </div>
  </div>
  <div class="row space text-white">
    <div class="col-12">
      <form action="/members/new" method="POST">
        <fieldset class="border p-2 rounded row">
          <legend>New Member</legend>
          <div class="form-group col-4">
            <label>Member ID:</label>
            <input type="text" class="form-control" name="memberId">
          </div>
          <div class="form-group col-4">
            <label>First Name:</label>
            <input type="text" class="form-control" name="firstName">
          </div>
          <div class="form-group col-4">
            <label>Last Name:</label>
            <input type="text" class="form-control" name="lastName">
          </div>
          <div class="form-group col-4">
            <label>Telephone:</label>
            <input type="text" class="form-control" name="phone">
          </div>
        </fieldset>
        <div class="form-group col-6 offset-3 mt-2">
          <input class="form-control btn btn-primary" type="submit" value="Add Member">
        </div>
      </form>
    </div>
  </div>

</main>

<%-include ("partials/bottom") %>