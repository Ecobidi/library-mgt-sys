<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="/css/bootstrap.min.css" type="text/css" />
    <link rel="stylesheet" href="/css/font-awesome.min.css" type="text/css" />
    <link rel="stylesheet" href="/css/app.css" type="text/css" />
    <title>Library Management System</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
      <div class="d-flex align-items-center">
        <a class="navbar-brand text-white" href="#" id="logo"></a>
        <h4 class="text-white">
          <span class="title">Library </span>
          <span class="lead">Management System</span>
        </h4>
      </div>
    </nav>
    <div class="container-fluid">
      <div class="row text-white">
      <aside class="col-lg-2 bg-dark" style="min-height: 90vh;">
        <div class="d-flex align-items-center my-2 mb-4 p-2">
          <div class="display-4">
            <i class="fa fa-user-circle" aria-hidden="true"></i>
          </div>
          <div class="pl-2">
            <span>Welcome</span><br>
            <h5><%= user.username %></h5>
          </div>
        </div>

        <ul class="list-group">
          <a href="/" class="list-group-item mb-2 bg-primary text-white">
            <i class="fa fa-dashboard" aria-hidden="true"></i> 
            <span>Dashboard</span></a>
          <a href="/books" class="list-group-item mb-2 bg-success text-white">
            <i class="fa fa-book" aria-hidden="true"></i> <span>Books</span></a>
          <a href="/books/borrowed" class="list-group-item mb-2 bg-danger text-white">
            <i class="fa fa-bookmark" aria-hidden="true"></i> <span>Borrowed Books</span></a>
          <a href="/categories" class="list-group-item mb-2 bg-success text-white">
            <i class="fa fa-list" aria-hidden="true"></i> <span>Categories</span></a>
          <a href="/members" class="list-group-item mb-2 bg-info text-white">
            <i class="fa fa-bar-chart" aria-hidden="true"></i> <span>Members</span></a>
          <a href="/librarians" class="list-group-item mb-2 text-white" style="background-color: #6f42c1;">
            <i class="fa fa-users" aria-hidden="true"></i> <span>Librarians</span></a>
          <a href="/logout" class="list-group-item mb-2 bg-secondary text-white">
            <i class="fa fa-sign-out" aria-hidden="true"></i> <span>Logout</span></a>
        </ul>
        
      </aside>