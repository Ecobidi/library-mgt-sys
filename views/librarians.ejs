<%- include ('partials/top') %>
      <main class="col-lg-10">
        <div class="row space text-white">
          <div class="col-12 d-flex justify-content-between align-items-center underline pb-2">
            <h3 class="title">Librarians</h3>
            <div>
              <a href="/librarians/new" class="btn btn-info">Add Librarian</a>
            </div>
          </div>

        </div>

        <div class="row space">
          <div class="col-12">
            <table class="table table-bordered table-striped">
              <thead class="text-white" style="background-color: rgba(100, 100, 100, 0.5);">
                <tr>
                  <td>User ID</td>
                  <td>First Name</td>
                  <td>Last Name</td>
                  <td>Email Address</td>
                  <td>Actions</td>
                </tr>
              </thead>
              <tbody class="text-white">
                <% librarians.forEach((m) => { %>
                  <tr>
                    <td><%= m.username %></td>
                    <td><%= m.first_name %></td>
                    <td><%= m.last_name %></td>
                    <td><%= m.email %></td>
                    <td>
                      <a href='<%= "/librarians/remove/" + m._id %>' class="btn btn-sm btn-danger">Remove</a>
                    </td>
                  </tr>
                <% }) %>  
              </tbody>
            </table>
          </div>
        </div>
      </main>
    </div>

    </div>
    

<%- include ('partials/bottom') %>