<%- include ('partials/top') %>
      <main class="col-lg-10" style="background-color: rgba(0, 0, 0, 0.6);">
        <div class="row space text-white">
          <div class="col-12 d-flex justify-content-between align-items-center underline pb-2">
            <h3 class="title">Members</h3>
            <div>
              <a href="/members/new" class="btn btn-success">Add New Member</a>
            </div>
          </div>
        </div>

        <div class="row space" style="background-color: rgba(0, 0, 0, 0.4);">
          <div class="col-12">
            <table class="table table-bordered table-striped">
              <thead class="text-white" style="background-color: rgba(100, 100, 100, 0.5);">
                <tr>
                  <td>Member ID</td>
                  <td>Name</td>
                  <td>Phone Number</td>
                  
                  <td>Actions</td>
                </tr>
              </thead>
              <tbody class="text-white">
                <% members.forEach((m) => { %>
                  <tr>
                    <td><%= m.memberId %></td>
                    <td><%= m.firstName + ' ' + m.lastName %></td>
                    <td><%= m.phone %></td>
                    
                    <td>
                      <a href=<%= "/members/remove/" + m._id %> class="btn btn-sm btn-danger">Remove Member</a>
                    </td>
                  </tr>
                <% }) %>          
              </tbody>
            </table>
          </div>
        </div>
      </main>
    </div>

    </div>
    

<%- include ('partials/bottom') %>